<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_fuel_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Газ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_fuel_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="37 л"
        app:layout_constraintEnd_toStartOf="@+id/item_fuel_price"
        app:layout_constraintStart_toEndOf="@+id/item_fuel_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_fuel_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1007 грн/л"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>