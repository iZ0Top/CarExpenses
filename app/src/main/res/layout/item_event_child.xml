<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_constraint"
    android:background="@color/teal_700">

    <TextView
        android:id="@+id/item_interpunct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="•"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_name_or_type"/>

    <TextView
        android:id="@+id/item_name_or_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Свічки"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/item_quantity_or_volume"
        app:layout_constraintStart_toEndOf="@+id/item_interpunct"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="NGK BKUR6ET-10 V-Line 24 (3045)"
        app:layout_constraintStart_toEndOf="@id/item_interpunct"
        app:layout_constraintTop_toBottomOf="@+id/item_name_or_type" />

    <TextView
        android:id="@+id/item_part_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Part №: WAG 101 000 033 AA"
        app:layout_constraintStart_toEndOf="@id/item_interpunct"
        app:layout_constraintTop_toBottomOf="@+id/item_description" />

    <TextView
        android:id="@+id/item_quantity_or_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="16 шт"
        app:layout_constraintEnd_toStartOf="@id/item_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_name_or_type"/>


    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00000 грн."
        app:layout_constraintStart_toEndOf="@id/item_quantity_or_volume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
